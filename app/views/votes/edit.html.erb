<h1>Editing Vote #<%= @vote.id %></h1>


<%= form_tag(vote_url(@vote), method: 'patch') do %>

  <div>
    <%= label_tag :user_id %><br />
    <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name, @vote.user_id) %>
  </div>

  <div>
    <%= label_tag :movie_id %><br />
    <%= select_tag :movie_id, options_from_collection_for_select(Movie.all, :id, :title, @vote.movie_id) %>
  </div>


  <div>
    <%= submit_tag "Update Vote" %>
  </div>

<% end %>
