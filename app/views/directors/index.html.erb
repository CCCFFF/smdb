<h1>Directors</h1>

<p><%= link_to 'Add a New Director', new_director_url %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date of Birth</th>
      <th>Image</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @directors.each do |director| %>
    <tr>
      <td><%= link_to director.name, director_url(director.id) %></td>
      <td><%= director.dob %></td>
      <td><%= image_tag director.image_url, width: 100 %></td>
      <td><%= truncate director.bio %></td>

      <td><%= link_to 'Show', director_url(director) %></td>
      <td><%= link_to 'Edit', edit_director_url(director) %></td>
      <td><%= link_to 'Destroy', director_url(director), method: 'delete', data: { confirm: "Do you really want to delete this director?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

