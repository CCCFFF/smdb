<h1>Users</h1>

<p><%= link_to 'Add a New User', new_user_url %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user_url(user) %></td>
      <td>
        <% if user == current_user %>
          <%= link_to 'Edit', edit_user_url(user) %>
        <% end %>
      </td>
      <td>
        <% if user == current_user %>
          <%= link_to 'Destroy', user_url(user), method: 'delete', data: { confirm: "Do you really want to delete this user?" } %>
        <% end %>
      </td>

    </tr>
  <% end %>
  </tbody>
</table>

